		.if 	HARDWARE==0

; ************************************************************************************************
;
;								This Macro initialises the tick timer
;
; ************************************************************************************************

tickinitialise 	.macro
		.endm		

; ************************************************************************************************
;
;		Called 1 in every 8 instructions, firing if more than 7 clocks (e.g 0.1 seconds) has
; 		elapsed.
;
; ************************************************************************************************

tickcheck		.macro
		stz 	1 							; access I/O Page 0
		sec 								; calculate timer - LastTick
		lda 	$D659
		tax 								; saving timer in X
		sbc 	LastTick
		cmp 	#7
		bcc 	_NoFireTick 				; if < 7 clocks don't fire.
		stx 	LastTick 					; update last timer

		lda 	#42
		jsr 	EXTPrintCharacter	
		
_NoFireTick:		
		.endm

		.endif

