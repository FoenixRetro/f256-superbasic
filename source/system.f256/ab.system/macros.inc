;
;							Break check, returns NZ set if breaking
;
; ************************************************************************************************
		
breakcheck 	.macro
		lda 	kernel.args.events.pending 	; load pending event count into accumulator
		beq 	_NoEvents					; if zero, skip with Z flag set.
		jsr 	ProcessEvents
_NoEvents:
		.endm		

