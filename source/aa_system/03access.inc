; ************************************************************************************************
;
;								(codePtr) access and update
;
; ************************************************************************************************

cget 	.macro
		lda 	(codePtr),y
		.endm

cget0 	.macro
		lda 	(codePtr)
		.endm

cset 	.macro
		sta 	(codePtr),y
		.endm

cset0 	.macro
		sta 	(codePtr)
		.endm

ccmp 	.macro
		cmp 	(codePtr),y
		.endm

; ************************************************************************************************
;
;		  codePtr has been updated, adjust any physical selections (e.g. page selection)
;
; ************************************************************************************************

cresync .macro
		.endm

; ************************************************************************************************
;
;								Advance codePtr to the next line
;
; ************************************************************************************************

cnextline .macro
		clc
		lda 	(codePtr)					; get offset 
		adc 	codePtr
		sta 	codePtr
		bcc 	_CREExit
		inc 	codePtr+1
_CREExit:
		.endm
	

; ************************************************************************************************
;
;									Set a value in codePointer.
;
; ************************************************************************************************

resetcodepointer 	.macro
		lda 	#(BasicStart & $FF)
		sta 	codePtr
		lda 	#(BasicStart >> 8)
		sta 	codePtr+1
		.endm

